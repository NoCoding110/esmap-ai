{
  "name": "esmap-ai-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-Powered Global Energy Data & Insights Platform for ESMAP",
  "keywords": [
    "energy",
    "AI",
    "ESMAP",
    "sustainability",
    "renewable-energy",
    "data-analytics"
  ],
  "homepage": "https://esmap-ai.pages.dev",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "workers:dev": "cd workers/esmap-ai-api && npm run dev",
    "workers:deploy": "cd workers/esmap-ai-api && npm run deploy",
    "workers:deploy:staging": "cd workers/esmap-ai-api && npm run deploy:staging",
    "workers:deploy:production": "cd workers/esmap-ai-api && npm run deploy:production",
    "workers:typecheck": "cd workers/esmap-ai-api && npm run typecheck"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250803.0",
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2",
    "vite": "^5.0.8",
    "wrangler": "^4.27.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
