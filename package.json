{
  "name": "esmap-ai-platform",
  "version": "1.0.0",
  "description": "ESMAP AI Platform - AI-powered Global Energy Data & Insights Platform",
  "type": "module",
  "main": "src/main.jsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:load": "node tests/load/load-test-model-serving.js",
    "test:validation": "node tests/validation/simple-validation-test.js",
    "test:all": "npm run test && npm run test:integration && npm run test:validation",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name esmap-ai-platform",
    "deploy:workers": "npm run deploy:api && npm run deploy:models && npm run deploy:serving",
    "deploy:api": "cd infrastructure/workers/esmap-ai-api && npm run deploy",
    "deploy:models": "cd infrastructure/workers/esmap-ai-models && npm run deploy",
    "deploy:serving": "cd infrastructure/model-serving && npx wrangler deploy --config ../../config/cloudflare/wrangler-simple.toml",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "docs:serve": "echo 'Documentation available in docs/ directory'",
    "validate:deployment": "node tests/validation/validate-deployment.js",
    "health:check": "curl https://esmap-ai-api.metabilityllc1.workers.dev/health && curl https://esmap-model-serving.metabilityllc1.workers.dev/health"
  },
  "keywords": [
    "esmap",
    "ai",
    "energy",
    "sustainability",
    "data-platform",
    "analytics",
    "cloudflare-workers",
    "react",
    "vite"
  ],
  "author": "ESMAP AI Platform Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chart.js": "^4.4.0",
    "lucide-react": "^0.263.1",
    "react-chartjs-2": "^5.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esmap/ai-platform"
  },
  "bugs": {
    "url": "https://github.com/esmap/ai-platform/issues"
  },
  "homepage": "https://esmap-ai.org"
}